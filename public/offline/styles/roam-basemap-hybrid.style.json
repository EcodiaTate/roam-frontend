{
  "version": 8,
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "sources": {
    "basemap": {
      "type": "vector",
"url": "pmtiles://https://vzauarlfmkjfkcphojbd.supabase.co/storage/v1/object/public/tiles/australia.pmtiles"
    },
    "satellite": {
      "type": "raster",
      "tiles": ["https://mt1.google.com/vt/lyrs=s&x={x}&y={y}&z={z}"],
      "tileSize": 256
    }
  },
  "layers": [
    {
      "id": "satellite",
      "type": "raster",
      "source": "satellite",
      "minzoom": 0,
      "maxzoom": 20,
      "paint": {
        "raster-opacity": 0.92
      }
    },    

    {
      "id": "water-lines",
      "type": "line",
      "source": "basemap",
      "source-layer": "water_lines",
      "paint": {
        "line-color": "#6fd2e6",
        "line-opacity": 0.35,
        "line-width": ["interpolate", ["linear"], ["zoom"], 6, 0.6, 12, 1.3, 14, 2.0]
      }
    },

    {
      "id": "streets-outline",
      "type": "line",
      "source": "basemap",
      "source-layer": "streets",
      "paint": {
        "line-color": "#000000",
        "line-opacity": ["interpolate", ["linear"], ["zoom"], 8, 0.28, 12, 0.34, 14, 0.40],
        "line-width": ["interpolate", ["linear"], ["zoom"], 8, 1.8, 12, 5.2, 14, 7.6]
      }
    },
    {
      "id": "streets",
      "type": "line",
      "source": "basemap",
      "source-layer": "streets",
      "paint": {
        "line-color": "#f3e8d6",
        "line-opacity": ["interpolate", ["linear"], ["zoom"], 8, 0.22, 12, 0.28, 14, 0.34],
        "line-width": ["interpolate", ["linear"], ["zoom"], 8, 1.0, 12, 2.8, 14, 4.8]
      }
    },

    {
      "id": "place-labels",
      "type": "symbol",
      "source": "basemap",
      "source-layer": "place_labels",
      "minzoom": 3,
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"], ""],
        "text-size": ["interpolate", ["linear"], ["zoom"], 3, 11, 7, 13, 12, 16],
        "text-font": ["Open Sans Regular", "Arial Unicode MS Regular"]
      },
      "paint": {
        "text-color": "rgba(248, 236, 218, 82)",
        "text-halo-color": "rgba(0, 0, 0, 0.38)",
        "text-halo-width": 1.0,
        "text-halo-blur": 0.9
      }
    },

    {
      "id": "street-labels",
      "type": "symbol",
      "source": "basemap",
      "source-layer": "street_labels",
      "minzoom": 10,
      "layout": {
        "symbol-placement": "line",
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"], ""],
        "text-size": ["interpolate", ["linear"], ["zoom"], 10, 10, 14, 12],
        "text-font": ["Open Sans Regular", "Arial Unicode MS Regular"]
      },
      "paint": {
        "text-color": "rgba(248, 236, 218, 0.48)",
        "text-halo-color": "rgba(0, 0, 0, 0.34)",
        "text-halo-width": 0.9,
        "text-halo-blur": 1.0
      }
    }
  ]
}
